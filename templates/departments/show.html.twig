{% extends 'baseAdmin.html.twig' %}

{% block title %}Département{% endblock %}

{% block body %}
    <h1>Département</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ department.code }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>Nom Capitale</th>
                <td>{{ department.nameUppercase }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('departments_index') }}"><i class="me-3 fas fa-undo-alt"></i></a>

    <a href="{{ path('departments_edit', {'id': department.id}) }}"><i class="far fa-edit"></i></a>

    {{ include('departments/_delete_form.html.twig') }}
{% endblock %}
