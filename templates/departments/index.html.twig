{% extends 'baseAdmin.html.twig' %}

{% block title %}Départements{% endblock %}

{% block body %}
    <h1>Départements</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Numéro</th>
                <th>Nom</th>
                {# <th>NameUppercase</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                {# <td>{{ department.id }}</td> #}
                <td>{{ department.code }}</td>
                <td>{{ department.name }}</td>
                {# <td>{{ department.nameUppercase }}</td> #}
                <td>
                    <a href="{{ path('departments_show', {'id': department.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('departments_edit', {'id': department.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departments_new') }}"><i class="far fa-plus-square"></i></a>
{% endblock %}
