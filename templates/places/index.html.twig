{% extends 'baseAdmin.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}
    <h1>Lieux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.name }}</td>
                <td>
                    <a href="{{ path('places_show', {'id': place.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('places_edit', {'id': place.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('places_new') }}"><i class="far fa-plus-square"></i></a>
{% endblock %}
