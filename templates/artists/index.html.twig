{% extends 'baseAdmin.html.twig' %}

{% block title %}Artists index{% endblock %}

{% block body %}
    <h1>Artists index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Descripton</th>
                <th>SocialLink</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.descripton }}</td>
                <td>{{ artist.socialLink }}</td>

                <td>
                    <img class="img-miniature img-fluid" src="{{ asset('uploads/artists_pictures/'~artist.picture) }}" alt="{{ artist.picture }}" style="width: 400px;">
                </td>

                <td>
                    <a href="{{ path('artists_show', {'id': artist.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('artists_edit', {'id': artist.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artists_new') }}"><i class="far fa-plus-square"></i></a>
{% endblock %}
