{% extends 'base.html.twig' %}

{% block title %}Artists index{% endblock %}

{% block body %}
    <h1>Artists index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Descripton</th>
                <th>SocialLink</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.descripton }}</td>
                <td>{{ artist.socialLink }}</td>
                <td>
                    <a href="{{ path('artists_show', {'id': artist.id}) }}">show</a>
                    <a href="{{ path('artists_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary-custom" href="{{ path('artists_new') }}">Create new</a>
{% endblock %}
