{% extends 'baseAdmin.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}
<h1>Artiste</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ artist.name }}</td>
        </tr>
        <tr>
            <th>Descripton</th>
            <td>{{ artist.descripton }}</td>
        </tr>
        <tr>
            <th>SocialLink</th>
            <td>{{ artist.socialLink }}</td>
        </tr>
        <tr>
            <th>Picture</th>
            <td><img class="img-miniature" src="{{ asset('uploads/artists_pictures/'~artist.picture) }}"
                    alt="{{ artist.picture }}"></td>
        </tr>
    </tbody>
</table>
{% if is_granted('ROLE_EDITOR') %}
<a href="{{ path('artists_index') }}"><i class="fas fa-undo-alt"></i></a>

<a href="{{ path('artists_edit', {'id': artist.id}) }}"><i class="far fa-edit"></i></a>
{% endif %}
{% if is_granted('ROLE_ADMIN') %}
{{ include('artists/_delete_form.html.twig') }}
{% endif %}
{% endblock %}