{% extends 'baseAdmin.html.twig' %}

{% block title %}Artists{% endblock %}

{% block body %}
    <h1>Artists</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Descripton</th>
                <td>{{ artist.descripton }}</td>
            </tr>
            <tr>
                <th>SocialLink</th>
                <td>{{ artist.socialLink }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img class="img-miniature" src="{{ asset('uploads/artists_pictures/'~artist.picture) }}" alt="{{ artist.picture }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artists_index') }}"><i class="fas fa-undo-alt"></i></a>

    <a href="{{ path('artists_edit', {'id': artist.id}) }}"><i class="far fa-edit"></i></a>

    {{ include('artists/_delete_form.html.twig') }}
{% endblock %}
