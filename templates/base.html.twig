<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <title>
    {% block title %}Welcome!
    {% endblock %}
  </title>

  <!-- STYLES -->
  <link rel="stylesheet" href="{{ asset ('css/bootstrap.css') }}">
  <link href="{{ asset('css/app.css') }}" type="text/css" rel="stylesheet">

  <script src="{{ asset('js/bootstrap.bundle.min.js')}}"></script>

  <script src="{{ asset('js/app.js') }}"></script>

 <!-- Appel de la Feuille de style minifiée De La librairie Bootstrap -->
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" rel="stylesheet">
 <!-- Appel de la Feuille de style minifiée De l'extension Datepicker -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

  <!--ICONS-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
    integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- FONTS -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet">

</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{ path('home') }}"><img class="w-75 img-fluid" src="{{ asset('img/Festilab.png')}}"
          alt=""></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item me-5">
            <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Festivals</a>
          </li>
          <li class="nav-item me-5">
            <a class="nav-link active" aria-current="page" href="{{ path('home') }}">News</a>
          </li>
          <li class="nav-item me-5">
            <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Partenaires</a>
          </li>
          <li class="nav-item me-5">
            <a class="nav-link active" aria-current="page" href="{{ path('contact_us_new') }}">Contact</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <form class="d-flex">
            <div class="input-group mb-1">
              <input type="text" class="form-control" placeholder="Festivals, Artistes..." aria-label="Rechercher"
                aria-describedby="button-addon2">
              <button class="btn btn-outline-secondary" type="button" id="button-addon2">Rechercher</button>
            </div>
          </form>
        </ul>
      </div>
    </div>
  </nav>

  <main>
    {% block body %}{% endblock %}
  </main>

  <footer>
    FOOTER
  </footer>




  <!-- Extension jquery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <!-- Extension DATEPICKER -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js">
  </script>
  <!-- Noyau JavaScript de Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Script pour activation du datepicker -->
  <script src="{{ asset('js/app.js') }}"></script>


</body>

</html>