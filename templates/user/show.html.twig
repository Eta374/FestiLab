{% extends 'baseAdmin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
<h1>Utilisateur</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>IsVerified</th>
            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Pseudo</th>
            <td>{{ user.pseudo }}</td>
        </tr>
    </tbody>
</table>
{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('user_index') }}"><i class="me-3 fas fa-undo-alt"></i></a>
{% else %}
<a href="{{ path('home') }}"><i class="fas fa-home"></i></a>
{% endif %}
{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('user_edit', {'id': user.id}) }}"><i class="far fa-edit"></i></a>
{% endif %}

{% if is_granted('ROLE_ADMIN') %}
{{ include('user/_delete_form.html.twig') }}
{% endif %}
{% endblock %}